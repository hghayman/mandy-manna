---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import Aurora from "@/components/Aurora";
import { getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";

const contact = (await getEntry(
  "contact",
  "-index"
)) as CollectionEntry<"contact">;
const { contact_form_action }: { contact_form_action: string } = config.params;
const { title, description, meta_title, image } = contact.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <!-- Aurora Background -->
  <Aurora
    colorStops={["#3A29FF", "#FF94B4", "#FF3232"]}
    blend={0.05}
    amplitude={0.5}
    speed={0.2}
    client:load
  />

  <PageHeader title={title} />
  
  <!-- Contact Section -->
  <section class="py-16 bg-gradient-to-br from-blue-50 via-white to-cyan-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-8 border border-gray-200 dark:border-slate-700">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 font-serif">Send a Message</h2>
            <form action={contact_form_action} method="POST">
              <div class="mb-6">
                <label for="name" class="form-label">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input
                  id="name"
                  name="name"
                  class="form-input"
                  placeholder="Your Name"
                  type="text"
                  required
                />
              </div>
              <div class="mb-6">
                <label for="email" class="form-label">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input
                  id="email"
                  name="email"
                  class="form-input"
                  placeholder="your.email@example.com"
                  type="email"
                  required
                />
              </div>
              <div class="mb-6">
                <label for="subject" class="form-label">
                  Subject
                </label>
                <input
                  id="subject"
                  name="subject"
                  class="form-input"
                  placeholder="Subject"
                  type="text"
                />
              </div>
              <div class="mb-6">
                <label for="message" class="form-label">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  class="form-input"
                  placeholder="Your message..."
                  rows="8"
                  required
                ></textarea>
              </div>
              <button type="submit" class="btn btn-primary w-full">Send Message</button>
            </form>
          </div>
        </div>
        
        <!-- Contact Info & Social -->
        <div class="space-y-6">
          <!-- Contact Information -->
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 font-serif">Get in Touch</h3>
            
            <div class="space-y-4">
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Location</h4>
                <p class="text-gray-600 dark:text-gray-300">
                  Fox Chase Farm<br>
                  School District of Philadelphia<br>
                  Philadelphia, PA
                </p>
              </div>
              
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Email</h4>
                <p class="text-gray-600 dark:text-gray-300">
                  Please use the contact form to reach out
                </p>
              </div>
            </div>
          </div>
          
          <!-- Social Media -->
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 font-serif">Connect on Social Media</h3>
            
            <div class="grid grid-cols-2 gap-3">
              <a
                href="https://www.linkedin.com/in/drmandy"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline-primary btn-sm text-center"
              >
                LinkedIn
              </a>
              
              <a
                href="https://twitter.com/drmandy"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline-primary btn-sm text-center"
              >
                Twitter
              </a>
              
              <a
                href="https://instagram.com/drmandy"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline-primary btn-sm text-center"
              >
                Instagram
              </a>
              
              <a
                href="mailto:contact@drmandy.com"
                class="btn btn-outline-primary btn-sm text-center"
              >
                Email
              </a>
            </div>
          </div>

          <!-- Response Time Info -->
          <div class="bg-gradient-to-br from-green-50 to-blue-50 dark:from-slate-800 dark:to-slate-700 rounded-2xl p-6 border border-green-200 dark:border-slate-600">
            <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-3">Response Time</h4>
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              I strive to respond to all professional inquiries within 48 hours during the school year.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
