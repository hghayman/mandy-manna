---
import Base from "@/layouts/Base.astro";
import PostSingle from "@/layouts/PostSingle.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { getEntry } from "astro:content";

export const prerender = true;

export async function getStaticPaths() {
  const BLOG_FOLDER = "blog";
  const posts = await getSinglePage(BLOG_FOLDER);
  
  return posts.map((post) => ({
    params: { single: post.id },
    props: { post },
  }));
}

const { single } = Astro.params;
const { post } = Astro.props;
const BLOG_FOLDER = "blog";

// Fallback: Fetch the post by ID if not provided via props (for SSR)
const postData = post || await getEntry(BLOG_FOLDER, single!);

// Handle 404 if post not found
if (!postData) {
  return Astro.redirect('/404');
}

const { title, meta_title, description, image } = postData.data;
---

<Base title={title} meta_title={meta_title || title} description={description} image={image?.src}>
  <PostSingle post={postData} />
</Base>
